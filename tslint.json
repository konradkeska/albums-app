{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-react"],
  "jsRules": {
    "max-line-length": {
      "options": [80]
    }
  },
  "rules": {
    "max-line-length": {
      "options": [80]
    },
    "member-ordering": false,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "react-hooks/exhaustive-deps": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["src/serviceWorker.ts"],
    "format": "stylish"
  }
}
